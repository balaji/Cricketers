<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" x:Name="userControl"
	mc:Ignorable="d"
	x:Class="Cricketers.BlockWithBorder"
	d:DesignWidth="70" d:DesignHeight="33">

	<Grid x:Name="LayoutRoot" Background="Transparent">
		<Border BorderThickness="2" Margin="2" Padding="2" VirtualizingStackPanel.VirtualizationMode="Standard">
			<Border.BorderBrush>
				<SolidColorBrush Color="Gray"/>
			</Border.BorderBrush>
			<TextBlock x:Name="txtControl" Padding="3,0,0,0" VerticalAlignment="Center" Height="33" Width="70" HorizontalAlignment="Center" Text="{Binding DisplayText, ElementName=userControl}" Foreground="{StaticResource PhoneAccentBrush}" FontWeight="Bold" />
		</Border>
	</Grid>
</UserControl>